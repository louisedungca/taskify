<div class="w-1/3 h-[90%] border-2 border-slate-950 rounded-3xl bg-sky-100 flex flex-col justify-between gap-2 drop-shadow-lg">

  <div class="header--main border-b-2 border-slate-950">
    <h1>Change password</h1>
  </div> 

  <div class="form__block">
    <div class="w-full">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="flex flex-col gap-4 p-2">
          <div class="field">
            <%= f.label :password, "New password" %>
            <% if @minimum_password_length %>
              <small>(<%= @minimum_password_length %> characters minimum)</small>
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "Confirm new password" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions btn--main">
            <%= f.button "Change my password", class:"tracking-wider uppercase" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="sharedlinks__bottom">
      <%= render "devise/shared/links" %>
    </div>
  </div>

  <%= render partial: "devise/shared/form_footer" %>
</div>