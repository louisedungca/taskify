<%= render partial: "category_header" %>

<div class="w-full h-[85%] py-2 px-6 flex justify-center">
  <%= render partial: "tasks/new_task" %>

<!--show task-->
  <div class="w-full lg:w-2/3 h-full flex flex-col lg:flex-row">
    <% if @tasks.size > 0 %>
      <div class="flex flex-col lg:w-1/2">
        <h1 class="header--main">
          <% incomplete_tasks_count = @tasks.count { |task| !task.is_completed } %>
          <%= incomplete_tasks_count > 1 ? "Tasks" : "Task" %>
          <%= "(#{incomplete_tasks_count})" %>
        </h1> 

        <div class="w-full px-6 py-2 flex flex-col items-center gap-2 h-full overflow">
          <% @tasks.each do |task| %>
            <% if task.is_completed == false %>
              <div class="border-2 border-slate-950 w-full py-4 px-6 rounded-2xl bg-slate-50 drop-shadow-lg">
                <%= render partial: "tasks/show_task", locals: { task: task } %>
              </div>
            <% end %>        
          <% end %>
        </div>
      </div>
    <% else %>
      <h1 class="header--main h-full grid place-items-center drop-shadow-lg">
        No task to do
      </h1>
    <% end %>

    <% if @tasks.any?(&:is_completed) %>
      <div class="flex flex-col lg:w-1/2">        
        <h1 class="header--main">
          Completed
        </h1>    

        <div class="w-full max-w-1/2 px-6 py-2 flex flex-col items-center h-full gap-2 overflow">
          <% @tasks.each do |task| %>
            <% if task.is_completed == true %>
              <div class="border-2 border-slate-950 w-full py-4 px-6 rounded-2xl bg-slate-50 drop-shadow-lg">
                <%= render partial: "tasks/show_task", locals: { task: task } %>
              </div>
            <% end %>        
          <% end %>
        </div>    
      </div>
    <% end %>
  </div>
<!--end show task-->
</div>
