<div class="w-full max-h-full flex flex-col items-center overflow">
  <!--header-->
  <div class="grid place-items-center px-4 w-2/3 h-auto p-2">
    <h1 class="actions bg-accentV1 uppercase text-lg flex gap-4 items-center justify-center">  
      <%= @category.category_name %>            
      <%= link_to edit_category_path(@category) do %>
        <i class="fa-solid fa-pencil grid place-items-center text-xs"></i>
      <% end %>                                  
    </h1>
  </div>

  <!--body-->
  <div class="w-full h-[90%] px-6 flex justify-center">

  <!--add task-->
    <div class="w-1/4 h-full border-2 border-slate-950 rounded-3xl bg-sky-100 flex flex-col justify-between gap-2">
      <div class="header--main h-auto border-b-2 border-slate-950">
        <h1>Add Task</h1>
      </div> 

      <div class="h-2/3 px-6 py-2 flex flex-col items-center">
        <%= render partial: "tasks/add_task_form" %>
      </div>

      <div class="h-1/4 w-full bg-primary border-t-2 border-slate-950 rounded-tr-[5rem] rounded-b-3xl">
        <!--dark blue bottom design-->
      </div>
    </div>
  <!--end add task-->

  <!--show task-->
    <div class="w-2/3 h-full flex">
      <% if @tasks.size > 0 %>
        <div class="flex flex-col w-full">
          <h1 class="header--main text-slate-700">
            Tasks
          </h1> 

          <div class="w-full px-6 py-2 flex flex-col items-center gap-2 h-full overflow">
            <% @tasks.each do |task| %>
              <% if task.id.present? && task.is_completed == false %>
                <div class="border-2 border-slate-950 w-full py-4 px-6 rounded-2xl bg-slate-50">
                  <%= render partial: "tasks/show_task", locals: { task: task } %>
                </div>
              <% end %>        
            <% end %>
          </div>
        </div>
      <% end %>

      <% if @tasks.any?(&:is_completed) %>
        <div class="flex flex-col w-full">        
          <h1 class="header--main text-slate-700">
            Completed
          </h1>    

          <div class="w-full px-6 py-2 flex flex-col items-center gap-2">
            <% @tasks.each do |task| %>
              <% if task.id.present? && task.is_completed == true %>
                <div class="border-2 border-slate-950 w-full py-4 px-6 rounded-2xl bg-slate-50">
                  <%= render partial: "tasks/show_task", locals: { task: task } %>
                </div>
              <% end %>        
            <% end %>
          </div>    
        </div>
      <% end %>

    </div>
  <!--end show task-->
  </div>
  <!--end body-->

</div>