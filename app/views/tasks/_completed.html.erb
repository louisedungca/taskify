<% if task.id.present? && task.is_completed == true %>
  <div class="border-2 border-dotted border-slate-950">  
    <p class="line-through">
      <%= task.task_item %>
    </p>
    
    <%= link_to "Edit", "/categories/#{task.category_id}/tasks/#{task.id}/edit" %>
    <%= link_to "Delete", [task.category, task], data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?"} %>
  </div>  
<% end %>