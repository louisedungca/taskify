<div class="w-full">
  <%= form_with model: @task, method: :patch do |form| %>
    <div class="field">
      <%= form.check_box :is_completed %>
      <%= form.label task.task_item %>
    </div>
  <% end %>

  <%= link_to "Delete", [task.category, task], data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?"} %>
</div>
