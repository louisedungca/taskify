<%= form_with model: task, url: [task.category, task], method: :patch do |form| %>
  <div class="flex items-center justify-between w-full px-2">
    <div class="field w-full flex items-center gap-2 text-xs">
      <%= form.check_box :is_completed, as: :boolean, onchange: "this.form.submit()" %> 
      <div class="<%= task.is_completed ? "italic line-through" : "" %>">
        <%= form.label :is_completed, task.task_item %>
      </div>   
    </div>        

    <div class="flex items-center gap-3">
      <%= link_to edit_category_task_path(task.category_id, task.id) do %>
        <i class="fa-regular fa-pen-to-square"></i>
      <% end %>
      
      <%= link_to [task.category, task], data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?"} do %>
        <i class="fa-solid fa-trash-can text-red-500"></i>
      <% end %>
    </div>
  </div>  

  <div class="field w-full text-red-500 text-[0.7rem] px-2 flex items-center gap-2">
    <% if task.due_date < Date.today && task.is_completed == false %>
    <div class="opacity-0"><%= form.check_box :is_completed %></div> 
    <small class="font-bold italic">
      <%= task.due_date.strftime("%m/%d/%y") %>
    </small>
    <% end %>
  </div>
<% end %>    
